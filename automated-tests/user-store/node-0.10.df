FROM node:0.10
RUN apt-get update
RUN apt-get install unzip
RUN wget --output-document="/opt/master.zip" https://github.com/Magnitus-/UserStore/archive/master.zip
RUN (cd /opt; unzip master.zip)
RUN (cd /opt/UserStore-master; npm install)
RUN touch /bin/runtest.sh
RUN echo "(cd /opt/UserStore-master; npm test)" > /bin/runtest.sh
RUN chmod +x /bin/runtest.sh
ENTRYPOINT ["/bin/bash"]
CMD ["runtest.sh"]
